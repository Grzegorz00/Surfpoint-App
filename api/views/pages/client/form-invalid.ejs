    <main>
        <h2>Nowy klient</h2>
        <form class="form" novalidate onsubmit="return validateForm();">
            <label for="name">Imię: *</label>
            <input type="text" name="name" id="name" required>
            <span id="errorName"  class="errors-text"></span>

            <label for="name">Nazwisko: *</label>
            <input type="text" name="surname" id="surname" required>
            <span id="errorSurname" class="errors-text">Pole jest wymagane</span>

            <label for="name">Sport: *</label>
            <input type="text" name="sport" id="sport" required>
            <span id="errorSport" class="errors-text">Pole jest wymagane</span>

            <label for="name">Cena: *</label>
            <input type="text" name="price" id="price" required>
            <span id="errorPrice" class="errors-text">Pole jest wymagane</span>

            <div class="form-buttons">
                <input type="submit" value="Dodaj" class="form-button-submit">
                <a href="../../pages/client/list.html" class="form-button-cancel">Anuluj</a>
            </div>
        </form>
    </main>
