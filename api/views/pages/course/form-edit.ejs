<%- include('../../fragments/header.ejs') %>
<main>
    <h2>Edycja kursu</h2>
    <form class="form" novalidate>
        <label for="name">Nazwisko trenera: <span class="symbol-required">*</span></label>
        <input type="text" name="trainerSurname" id="trainerSurname" placeholder="1-100 znaków" value="Pudzianowski" required />
        <span id="errorTrainerSurname" class="errors-text"></span>

        <label for="name">Nazwisko klienta: <span class="symbol-required">*</span></label>
        <input type="text" name="clientSurname" id="clientSurname" placeholder="1-100 znaków" value="Janowski" required />
        <span id="errorClientSurname" class="errors-text"></span>

        <label for="name">Data od: <span class="symbol-required">*</span></label>
        <input type="date" name="dateFrom" id="dateFrom" value="2021-12-20" required />
        <span id="errorDateFrom" class="errors-text"></span>

        <label for="name">Data do:</label>
        <input type="date" name="dateTo" id="dateTo" value="2021-12-25"/>
        <span id="errorDateTo" class="errors-text"></span>
        
        <div class="form-buttons">
            <input type="submit" value="Dodaj" class="form-button-submit">
            <a href="/course" class="form-button-cancel">Anuluj</a>
        </div>
    </form>
</main>
<script type="application/javascript" src="../../js/validationCourseForm.js"></script>
<%- include('../../fragments/footer.ejs') %>